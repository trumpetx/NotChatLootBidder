  <Frame name="NotChatLootBidder_Frame" hidden="false" toplevel="true" parent="UIParent" movable="true" enableMouse="true">
  <Size><AbsDimension x="412" y="20"/></Size>
  <Anchors><Anchor point="TOP"><Offset><AbsDimension x="0" y="-64"/></Offset></Anchor></Anchors>
  <Frames>
    <Frame name="$parentPlacement" inherits="BidFrameTemplate" hidden="true">
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton")
        this.itemLinkInfo = "item:35::::::::60:::::"
        getglobal("NotChatLootBidder_FramePlacementNote"):SetText("'/bid' to show/hide this frame")
      </OnLoad>
      <OnShow>
        NotChatLootBidder_FramePlacementAlt:SetChecked(NotChatLootBidder_Frame:GetAlt())
        NotChatLootBidder_FramePlacementNoReply:SetChecked(NotChatLootBidder_Frame:GetNoReply())
        NotChatLootBidder_FramePlacementSpec:SetValue(NotChatLootBidder_Frame:GetSpec())
      </OnShow>
      <OnHide>
        this:StopMovingOrSizing()
        local point, p, relativePoint, xOfs, yOfs = this:GetPoint()
        NotChatLootBidder_Frame:SavePoint(point, relativePoint, xOfs, yOfs)
      </OnHide>
      <OnDragStart>
        if arg1 == "LeftButton" then
          this:SetMovable(true)
          this:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing()
        local point, p, relativePoint, xOfs, yOfs = this:GetPoint()
        NotChatLootBidder_Frame:SavePoint(point, relativePoint, xOfs, yOfs)
      </OnDragStop>
      <OnMouseUp>
        if arg1 == "LeftButton" and this:IsVisible() then
          this:StopMovingOrSizing()
          this:SetMovable(false)
        end
      </OnMouseUp>
    </Scripts>
    </Frame>
  </Frames>

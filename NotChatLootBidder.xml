        <Scripts>
          <OnLoad>
            UIDropDownMenu_Initialize(this, function(level, menulist)
              if level == nil then
                -- Initialize the "outer Frame" to include a :SetValue() method which we can use externally
                local widgetName = this:GetName()
                local propName = string.sub(widgetName, strlen(this:GetParent():GetName())+1)
                this.SetValue = function(self, value)
                  UIDropDownMenu_SetSelectedValue(self, value)
                  getglobal(widgetName .. "Text"):SetText(value)
                  CloseDropDownMenus()
                end
              elseif level == 1 then
                local widget = this:GetParent()
                for _, s in pairs({"None", "Tank", "Heal", "DPS"}) do
                  local option = {}
                  option.text = s
                  option.func = function()
                    NotChatLootBidder_Frame:SetSpec(option.text)
                    widget:SetValue(option.text)
                  end
                  UIDropDownMenu_AddButton(option)
                end
              end
            end)
            UIDropDownMenu_SetWidth(50)
          </OnLoad>
        </Scripts>
